<h1> <%= @user.username %> </h1>

<% if @user.images.any? %>
  <h2><%= @user.username %>'s images:</h2>
  <ul>
    <% @user.images.each do |image| %>
      <li>
        <%= link_to image_path(image) do %>
          <%= image_tag image.pic.url(:medium) %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>

<hr>

<% if @tagged_images.any? %>
  <h2>Images <%= @user.username %> is tagged in:</h2>
  <ul>
    <% @tagged_images.each do |image| %>
      <li>
        <%= link_to image_path(image) do %>
          <%= image_tag image.pic.url(:medium) %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>
